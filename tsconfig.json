{
  "compilerOptions": {
    "baseUrl": ".", // 工作根目录
    "module": "ES6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib-types"
  },
  "include": [
    "src/**/*",
    "src-types/**/*"
  ]
}