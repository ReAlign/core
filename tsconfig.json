{
  "compilerOptions": {
    "baseUrl": ".", // 工作根目录
    "module": "ES6",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib-types"
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}